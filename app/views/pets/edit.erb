<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name: </label>

  <br></br>

  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>">

  <br></br>

  <label>Choose and existing owner:</label>

  <br></br>

  <% Owner.all.each do |owner| %>
    <input id="<%= owner.id %>" type="radio" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked if @pet.owner == owner' %>>
      <%= owner.name %>
    </input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input id="owner_name" type="text" name=owner[name]></input>
  <br></br>
  <input type="submit" value="Update Pet">

</form>
